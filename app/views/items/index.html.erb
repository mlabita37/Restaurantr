<%= stylesheet_link_tag    'items', media: 'all', 'data-turbolinks-track' => true %>
<h4>Menu</h4>
  <% @items.in_groups_of(3, false).each do |group| %>
  <div class="row">
   <% group.each do |item| %>
   <div class="large-4 columns color">
  <strong><%= item.name %></strong><br>
  <%= item.description %><br>
  <%= item.price %><br>
  </div>
  <% end %>
  </div>
  <% end %>
