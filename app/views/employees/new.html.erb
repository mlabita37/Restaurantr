
<h4>New Employee</h4>
<%= form_for @employee do |f| %>
<div class="row">
    <div class="large-6 columns">
      <label>Username
      <%= f.text_field :username %>
      </label>
    </div>
    <div class="large-6 columns">
    <label>Password
    <%=f.text_field :password %>
    </label>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
    <label>First Name
    <%=f.text_field :firstname %>
    </label>
  </div>
  <div class="large-6 columns">
    <label>Last Name
    <%=f.text_field :lastname %>
    </label>
  </div>
</div>
<div class="row">
  <div class="large-6 columns">
  <label>Address Line 1
  <%=f.text_field :address1 %>
  </label>
  </div>
  <div class="large-6 columns">
    <label>Address Line 2
    <%=f.text_field :address2 %>
    </label>
  </div>
</div>
<div class="row">
    <div class="large-4 columns">
      <label>City
      <%=f.text_field :city %>
      </label>
    </div>
    <div class="large-4 columns">
      <label>State
      <%=f.text_field :state %>
      </label>
    </div>
    <div class="large-4 columns">
      <label>Zip
      <%=f.text_field :zip %>
      </label>
    </div>
</div>
<div class="row">
  <div class="large-3 columns">
    <label>Phone Number
    <%=f.text_field :phone_number %>
    </label>
  </div>
  <div class="large-3 columns">
    <label>Date of Birth
    <%=f.text_field :dob %>
    </label>
  </div>
  <div class="large-3 columns">
    <label>Job Title
    <%=f.text_field :job_title %>
    </label>
  </div>
  <div class="large-3 columns">
  <label>Administrator Access
  <%=f.text_field :is_admin %>
  </label>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <%= f.submit :class => "button submit" %>
  </div>
</div>
<% end %>
