<%= stylesheet_link_tag    'orders', media: 'all', 'data-turbolinks-track' => true %>

<h4>New Order</h4>
<%= form_for @order do |f| %>
<%= f.label :name %>
<%= f.collection_select :item_id, Item.all, :id, :name, class: "u-full-width"%>
<%= f.label :party_id %>
<%= f.collection_select :party_id, Party.all, :id, :id, class: "u-full-width"%>
<%= f.label :quantity %>
<%= f.text_field :quantity %>
<br>
<%= f.submit :class => "button-primary" %>
<% end %>

<table>
  <thead>
    <tr>
        <th>Order</th>
        <th>Price</th>
        <th>Quanity</th>
        <th>Party</th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |order| %>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= order.item.price %></td>
      <td><%= order.quantity %></td>
      <td><%= order.party_id %></td>
      <td><%= button_to "Edit", ('items#update'), method: :update, class: "button-primary" %></td>
      <td><%= button_to "Remove", order_path(order), method: :delete, class: "button-primary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
