<%= stylesheet_link_tag    'admins', media: 'all', 'data-turbolinks-track' => true %>
<h4>Update Menu</h4>

<% @items.in_groups_of(3, false).each do |group| %>
<div class="row ">
 <% group.each do |item| %>
 <div class="large-4 columns color">
<strong><%= item.name %></strong><br>
<%= item.description %><br>
<%= item.price %><br>
<%= button_to "Remove", item_path(item), method: :delete, class: "button-primary"%>
<%= button_to "Edit", edit_item_path(item), method: :get, class: "button-primary" %>
</div>
<% end %>
</div>
<% end %>
